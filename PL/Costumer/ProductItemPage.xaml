      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL.Costumer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductItemPage">

    <Grid>
        <ListView d:ItemsSource="{d:SampleData ItemCount=5}" Margin="400,90,58,36">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Label Content="Choose Category" HorizontalAlignment="Left" Margin="75,152,0,0" VerticalAlignment="Top" FontFamily="Ploni 1.1 AAA Medium" FontWeight="Bold" FontSize="36"/>
        <ComboBox HorizontalAlignment="Left" Margin="87,215,0,0" VerticalAlignment="Top" Width="247" Height="41"/>
    </Grid>
</Page>
