<Page x:Class="PL.Costumer.OrderTrackingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL.Costumer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="OrderTrackingPage">

    <Grid Background="White">
        <Label Content="Your Order Statuse" HorizontalAlignment="Left" Margin="400,96,0,0" VerticalAlignment="Top" FontFamily="Ploni 1.1 AAA Medium" FontSize="36"/>
        <Rectangle HorizontalAlignment="Left" Height="219" Margin="400,164,0,0" VerticalAlignment="Top" Width="302" Fill="#FFEEEAEA"/>
        <Label Content="Enter Your Order Number:" HorizontalAlignment="Left" Margin="90,184,0,0" VerticalAlignment="Top" FontFamily="Ploni 1.1 AAA" FontSize="20"/>
        <TextBox HorizontalAlignment="Left" Margin="100,228,0,0" Text="{Binding MyValue}" VerticalAlignment="Top" Width="213" Height="32" FontFamily="Ploni 1.1 AAA" BorderBrush="{x:Null}" Background="#FFEEEAEA" TextAlignment="Center" TextWrapping="Wrap" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="CheckButton" Content="Check" Click="CheckButton_Click" HorizontalAlignment="Left" Margin="143,274,0,0" VerticalAlignment="Top" Width="127" Height="28"/>

    </Grid>
</Page>
