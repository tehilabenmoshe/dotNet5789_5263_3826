<Page x:Class="PL.Costumer.ProductItemCatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL.Costumer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ProductItemCatalogPage">

    <Grid>
        <ListView x:Name="ProductItemListView"  d:ItemsSource="{d:SampleData ItemCount=5}" Margin="77,130,75,95" SelectionChanged="ProductItemListView_SelectionChanged"  ItemsSource="{Binding}" >
            <ListView.View>
                <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="Employee Information">
                    <GridViewColumn DisplayMemberBinding ="{Binding ID}" Header="ID" Width="100"/>
                    <GridViewColumn DisplayMemberBinding ="{Binding Name}" Header="Name" Width="150"/>
                    <GridViewColumn DisplayMemberBinding ="{Binding Price}" Header="Price" Width="100"/>
                    <GridViewColumn DisplayMemberBinding ="{Binding Amount}" Header="Amount" Width="100"/>
                    <GridViewColumn DisplayMemberBinding ="{Binding InStock}" Header="In Stock" Width="100"/>
                    <GridViewColumn DisplayMemberBinding ="{Binding Category}" Header="Category" Width="100"/>

                </GridView>
            </ListView.View>
        </ListView>
        <ComboBox x:Name="CategoryBox" HorizontalAlignment="Center" Margin="0,81,0,0" VerticalAlignment="Top" Width="344" Height="22" SelectionChanged="CategoryBox_SelectionChanged"/>
        <Label Content="Sort By Category" HorizontalAlignment="Center" Margin="0,31,0,0" VerticalAlignment="Top" FontFamily="Ploni 1.1 AAA Medium" FontSize="24"/>
        <Button Name="CartButton" Click="OnClick"  Margin="36,31,703,370" Background="{x:Null}" BorderThickness="0,0,0,0">
            <Image Source="/Costumer/add-to-basket.png" Height="59" Width="46" />
        </Button>

    </Grid>
</Page>
