<Window x:Class="PL.ProductListDisplay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="ProductListDisplay" Height="640" Width="800">
    <Grid Name="MainGrid">
        <ListView x:Name="ProductListView" Margin="46,91,540,341" Grid.Row="1"  />
        <Grid Name="UpGrid" Height="auto" Width="auto" Margin="0,0,0,484" Grid.RowSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions >
        </Grid>
        <ComboBox Name="CategorySelector" Margin="233,22,253,510" Grid.Row="1" SelectionChanged="CategorySelector_SelectionChanged" />
        <Label Content="Category" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="73" Width="192" FontFamily="Ploni 1.1 AAA U-Bold" FontSize="36" Grid.RowSpan="2"/>

        <Grid.RowDefinitions>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="575*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
    </Grid>

</Window>
