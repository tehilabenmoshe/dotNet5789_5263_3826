<Page x:Class="PL.Manager.ProductListPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PL.Manager"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="ProductListPage">

    <Grid Background="White">
        <Button  Content="Add new Product" HorizontalAlignment="Left" Margin="304,411,0,98" Padding="5" Width="164" FontFamily="Ploni 1.1 AAA D-Bold" BorderThickness="0,0,0,0" Click="Button_Click"/>


        <ListView x:Name="ProductListView" Margin="104,131,132,185" 
            ItemsSource="{Binding}" FontFamily="Ploni 1.1 AAA" IsSynchronizedWithCurrentItem="False" BorderThickness="2,2,2,2" MouseDoubleClick="ProductListView_MouseDoubleClick" SelectionChanged="ProductListView_SelectionChanged" >
            <ListView.View>
                <GridView AllowsColumnReorder="true" ColumnHeaderToolTip="Employee Information">
                    <GridViewColumn DisplayMemberBinding ="{Binding ID}" Header="ID" Width="120"/>
                    <GridViewColumn DisplayMemberBinding ="{Binding Name}" Header="Name" Width="200"/>
                    <GridViewColumn DisplayMemberBinding ="{Binding Category}" Header="Category" Width="120"/>
                    <GridViewColumn DisplayMemberBinding ="{Binding Price}" Header="Price" Width="120"/>
                </GridView>
            </ListView.View>
        </ListView>


        <ComboBox  x:Name="CategorySelector" Margin="221,70,265,438" SelectionChanged="CategorySelector_SelectionChanged" BorderThickness="0,0,0,0" />

        <Label Content="Category" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" Height="73" Width="192" FontFamily="Ploni 1.1 AAA U-Bold" FontSize="36"/>

    </Grid>
</Page>
